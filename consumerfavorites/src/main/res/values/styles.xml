<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LayoutBackground">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    
    <style name="TextContent" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Overview">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.65</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.SubJudul">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextContent.RatingSmall">
        <item name="android:background">@drawable/bg_rounded_shape_rating</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextContent.RatingBig">
        <item name="android:background">@drawable/bg_rounded_shape_rating</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent.SmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="ImagePosterStyle">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">161dp</item>
    </style>

    <style name="ImageBackPosterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="OverlayGrey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.52</item>
        <item name="android:src">@drawable/overylay_bg_grey</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
