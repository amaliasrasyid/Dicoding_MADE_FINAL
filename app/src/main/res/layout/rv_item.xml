<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_rvitem_container_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/bg_rounded_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/ImagePosterStyle"
            android:id="@+id/img_item_poster"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/example_poster"
            android:contentDescription="@string/msg_poster_film"/>

        <TextView
            android:id="@+id/tv_item_judul"
            style="@style/TextContent.Judul"
            android:layout_width="0dp"
            android:maxLines="1"
            android:layout_marginStart="@dimen/margin_left_content_list"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="3dp"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_popularity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_item_poster"
            tools:text="How To Train Your Dragon" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left_content_list"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/msg_icon_popularity"
            android:src="@drawable/ic_popularity"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_sinopsis"
            app:layout_constraintStart_toEndOf="@+id/img_item_poster" />

        <TextView
            android:id="@+id/tv_item_popularity"
            style="@style/TextContent.SmallText"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_sinopsis"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            tools:text="204.321" />

        <TextView
            android:id="@+id/tv_item_sinopsis"
            style="@style/TextContent.Sinopsis"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_left_content_list"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_item_poster"
            tools:text="Many thousands of years in the future, Earth â€™s cities roam the globe on huge wheels, devouring each other in a struggle for ever diminishing resources. On one of these massive traction cities, the old London, Tom Natsworthy has an unexpected encounter with a mysterious young woman from the wastelands who will change the course of his life forever." />

        <TextView
            style="@style/TextContent.RatingSmall"
            android:id="@+id/tv_item_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="8.4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
